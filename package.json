{
  "name": "design-system-mcp-server",
  "version": "0.0.0",
  "description": "Model Context Protocol server for Naos",
  "keywords": [
    "brevo",
    "naos",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtsl/design-system.git"
  },
  "license": "MIT",
  "author": "Brevo",
  "type": "module",
  "main": "dist/server.js",
  "bin": "dist/server.js",
  "files": [
    "dist",
    "cursorRules"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production sh -c \"tsc --project ./tsconfig.json  && chmod +x dist/server.js && node src/replaceEnv.js\"",
    "dev": "tsx src/server.ts",
    "inspect": "npx -y @modelcontextprotocol/inspector node dist/server.js",
    "lint": "eslint --ext .ts src/",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dtsl/css-design-tokens": "*",
    "@dtsl/docs-core": "^1.0.0",
    "@dtsl/icons": "*",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "20.12.6",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "replace-in-file": "8.3.0",
    "tsx": "4.7.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": "^16 || ^18 || ^20 || ^22"
  }
}
